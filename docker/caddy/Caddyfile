# --- Tu web principal (Angular + PHP) ---
logisteia.com, www.logisteia.com {
    root * /srv
    encode gzip
    
    php_fastcgi backend:9000 {
        root /var/www/html
    }
    
    file_server
    try_files {path} {path}/ /index.html
}

# --- NUEVO: phpMyAdmin ---
pma.logisteia.com {
    # Redirige el tr√°fico al contenedor de phpmyadmin en su puerto interno (80)
    reverse_proxy phpmyadmin:80
}